@model List<FirstChallenge.Models.ComicBook>
@{
    ViewBag.Title = "My Comics";
}

<h2>My Comics</h2>

@foreach (var comic in Model)
{
    <h3>@Html.ActionLink(comic.ComicTitle, "Detail", new { id = comic.ComicBookId })</h3>
    <h4>#@comic.EpisodeNumber - @comic.EpisodeTitle</h4>
    // String.Join takes a string and an array as inputs
    // here we take all the characters and sellect all the names, adding them to an array of strings
    <p><strong>Starring: </strong>@(String.Join(", ", comic.Characters.Select(p => p.Name).ToArray()))</p>
}