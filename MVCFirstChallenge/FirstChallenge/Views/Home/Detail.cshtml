@*Bob called this the model directive we are adding in*@
@*it enables us to access the code in the ComicBook model*@ 
@model FirstChallenge.Models.ComicBook

@{
    var title = String.Format("Details about {0} #{1}", Model.ComicTitle, Model.EpisodeNumber);
    ViewBag.Title = title;
}

<h2>@title</h2>
<h4>Episode Title: @Model.EpisodeTitle</h4>
<p><strong>Starring: </strong>@(String.Join(", ", Model.Characters.Select(p => p.Name).ToArray()))</p>

<hr />

@Html.ActionLink("Back to All Commics", "Index")
